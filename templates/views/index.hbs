        <p id="message-1">{{messageOne}}</p>
        <p id="message-2">{{messageTwo}}</p>

    </div>

    {{> footer}}

    {{!-- pui fisierul js ultimul in body, altfel ruleaza inainte (daca il pui in head) si iei err --}}
